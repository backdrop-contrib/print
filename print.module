/********************************************************************
 * Module Functions :: Controllers
 ********************************************************************/

function print_node_controller() {
  $nid = arg(1);
  if (is_numeric($nid)) {
    print_generate_node($nid);
  }
}

function print_controller($module) {
  $f = 'print_generate_'. $module;

  if (function_exists($f)) {
    $f();
  }
}

